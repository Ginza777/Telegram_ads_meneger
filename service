[Unit]
Description=gunicorn daemon
Requires=telegram_ads.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/var/www/Telegram_Ads_parser/Telegram_ads_meneger
ExecStart=/var/www/Telegram_Ads_parser/env/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          Ads_manager.wsgi:application

[Install]
WantedBy=multi-user.target



server {
    listen 80;
    server_name crm.co.uz ads.crm.co.uz;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /var/www/Telegram_Ads_parser/Telegram_ads_meneger;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/telegram_ads.sock;
    }
}



######

celery -A Ads_manager worker --loglevel=info

celery -A Ads_manager beat --loglevel=info --scheduler django_celery_beat.schedulers:DatabaseScheduler
celery -A core beat --loglevel=info --scheduler django_celery_beat.schedulers:DatabaseScheduler